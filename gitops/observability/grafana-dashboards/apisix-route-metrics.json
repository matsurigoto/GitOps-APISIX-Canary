{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "QPS by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(apisix_http_status[5m])) by (route)",
          "legendFormat": "{{route}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "HTTP Status by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(apisix_http_status[5m])) by (route, code)",
          "legendFormat": "{{route}} - HTTP {{code}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "P50 Latency by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(apisix_http_latency_bucket{type=\"request\"}[5m])) by (le, route))",
          "legendFormat": "{{route}} P50"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "title": "P95 Latency by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(apisix_http_latency_bucket{type=\"request\"}[5m])) by (le, route))",
          "legendFormat": "{{route}} P95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "title": "P99 Latency by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(apisix_http_latency_bucket{type=\"request\"}[5m])) by (le, route))",
          "legendFormat": "{{route}} P99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "title": "Upstream Latency by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(apisix_http_latency_bucket{type=\"upstream\"}[5m])) by (le, route))",
          "legendFormat": "{{route}} upstream P95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "title": "APISIX Internal Latency by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(apisix_http_latency_bucket{type=\"apisix\"}[5m])) by (le, route))",
          "legendFormat": "{{route}} apisix P95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } }
    },
    {
      "title": "Error Rate by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(apisix_http_status{code=~\"5..\"}[5m])) by (route) / sum(rate(apisix_http_status[5m])) by (route) * 100",
          "legendFormat": "{{route}} 5xx %"
        },
        {
          "expr": "sum(rate(apisix_http_status{code=~\"4..\"}[5m])) by (route) / sum(rate(apisix_http_status[5m])) by (route) * 100",
          "legendFormat": "{{route}} 4xx %"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    }
  ],
  "schemaVersion": 39,
  "tags": ["apisix", "routes"],
